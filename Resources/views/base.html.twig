<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}{% endblock %}</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    {#<link rel="icon" href="{{ asset('../favicon.ico') }}?" type="image/x-icon">#}

    {% block stylesheet %}{% endblock %}

    {% for stylesheet in getTicketingStylesheets() %}
        <link rel="stylesheet" href="{{ asset(stylesheet) }}">
    {% endfor %}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    {% block head %}{% endblock %}
</head>

<body class="hold-transition skin-ticketing layout-top-nav">
<div class="wrapper">

    <header class="main-header">
        <nav class="navbar navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    {% if app.user %}
                        <a href="{{ path('ticketing_perso') }}" class="navbar-brand"><b>My Tickets</b></a>
                    {% else %}
                        <span class="navbar-brand"><b>My Tickets</b></span>
                    {% endif %}
                    {# Mobile button #}
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                            data-target="#navbar-collapse">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                    {% block left_navbar %}
                        <ul class="nav navbar-nav">
                            {% if app.user %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    {{ "Ticketing"|trans({}, 'TicketingBundle') }}
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="{{ path('ticketing_new') }}">
                                            {{ "Create a new ticket"|trans({}, 'TicketingBundle') }}
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('ticketing_perso') }}">
                                            {{ "See my tickets"|trans({}, 'TicketingBundle') }}
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('ticketing_list') }}">
                                            {{ "See all tickets"|trans({}, 'TicketingBundle') }}
                                        </a>
                                    </li>
                                </ul>
                                {% endif %}
                            </li>
                        </ul>
                    {% endblock %}

                </div>
                <!-- /.navbar-collapse -->
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        {% block right_navbar %}
                        {% endblock %}
                    </ul>
                </div>
                <!-- /.navbar-custom-menu -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    </header>
    <!-- Full Width Column -->
    <div class="content-wrapper">
        {% block flashbag %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">
                        {{ message|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}


        <div class="container">
            <!-- Main content -->
            <section class="content">
                {% block body %}

                {% endblock %}

                <!-- /.box -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.container -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="container">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0
            </div>
            <strong>Copyright &copy; {{ ''|date('Y') }}.</strong> All rights reserved.
        </div>
        <!-- /.container -->
    </footer>
</div>
<!-- ./wrapper -->

<!-- REQUIRED JS SCRIPTS -->
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
{% for javascript in getTicketingJavascripts() %}
    <script src="{{ asset(javascript) }}"></script>
{% endfor %}

{% block javascript %}{% endblock %}

<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. -->
</body>
</html>